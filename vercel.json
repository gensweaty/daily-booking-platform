
{
  "rewrites": [
    { "source": "/business/:slug", "destination": "/index.html" },
    { "source": "/business/:slug/:path*", "destination": "/index.html" },
    { "source": "/business", "destination": "/index.html" },
    { "source": "/login", "destination": "/index.html" },
    { "source": "/signup", "destination": "/index.html" },
    { "source": "/reset-password", "destination": "/index.html" },
    { "source": "/forgot-password", "destination": "/index.html" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/business/:slug*",
      "headers": [
        { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" },
        { "key": "Pragma", "value": "no-cache" },
        { "key": "Expires", "value": "0" },
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "X-Business-Page", "value": "true" }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=0, must-revalidate" }
      ]
    }
  ],
  "routes": [
    { 
      "src": "/business/(.*)", 
      "dest": "/index.html",
      "headers": { "X-Business-Page": "true" },
      "continue": true
    },
    { 
      "handle": "filesystem"
    }
  ]
}
